<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".page.FragmentScheduleAdd">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@android:color/transparent"
            android:clickable="true"
            app:cardElevation="0dp"
            app:rippleColor="#fff">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_back" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button_back"
            android:text="스케줄 추가"
            android:textColor="@color/text"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_ok"
        android:layout_below="@+id/layout_title"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="제목"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_title"
                android:textColor="@color/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edit_rectangle"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="기간"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edit_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/text_tilde"
                    android:background="@drawable/edit_rectangle"
                    android:focusable="false"
                    android:textColor="@color/text"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/text_tilde"
                    android:text="~"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/edit_end_date"
                    android:focusable="false"
                    android:textColor="@color/text"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/text_tilde"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_rectangle"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="14sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text_purpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="목표"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_purpose"
                android:textColor="@color/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edit_rectangle"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="수행할 동작"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp">

                <RadioButton
                    android:id="@+id/radio_app"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:text="앱 연결"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/layout_select_app"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/button_select_app"
                        android:text="앱 선택"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/text_selected_app"
                        android:text="선택된 앱"
                        android:textSize="12sp"
                        android:textColor="@color/text"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <RadioButton
                    android:id="@+id/radio_link"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:text="링크 실행"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/edit_link"
                    android:textColor="@color/text"
                    android:hint="링크 주소를 입력하세요"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edit_rectangle"
                    android:textCursorDrawable="@drawable/edit_cursor"
                    android:textSize="14sp" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="반복"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_marginRight="5dp"
                    android:text="매일"
                    android:textSize="12sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_marginRight="5dp"
                    android:text="매주"
                    android:textSize="12sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_marginRight="5dp"
                    android:text="매달"
                    android:textSize="12sp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    android:layout_marginRight="5dp"
                    android:text="기간내"
                    android:textSize="12sp" />
            </RadioGroup>

            <TextView
                android:id="@+id/text_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="목표 횟수"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_count"
                android:textColor="@color/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/edit_rectangle"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="알람"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switch_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/layout_alarm"
                android:orientation="vertical"
                android:layout_marginBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TimePicker
                    android:id="@+id/timepicker_alarm"
                    android:timePickerMode="spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_alarm_date"
                        android:text="알람날짜"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/button_alarm_calendar"
                        app:cardElevation="0dp"
                        app:rippleColor="#fff"
                        android:backgroundTint="@android:color/transparent"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/calendar"
                            android:layout_width="20dp"
                            android:layout_height="20dp"/>

                    </com.google.android.material.card.MaterialCardView>
                </RelativeLayout>
    
                <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
                    android:id="@+id/weekGroup"
                    app:tbgChildSpacing="auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
    
                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/day_sun"
                        android:text="일"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
    
                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/day_mon"
                        android:text="월"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
    
                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/day_tues"
                        android:text="화"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
    
                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/day_wed"
                        android:text="수"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
    
                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/day_thurs"
                        android:text="목"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
    
                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/day_fri"
                        android:text="금"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
    
                    <com.nex3z.togglebuttongroup.button.CircularToggle
                        android:id="@+id/day_sat"
                        android:text="토"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
    
                </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팬클럽 스케줄로 등록"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <Switch
                android:id="@+id/switch_share"
                android:layout_marginBottom="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/layout_calendar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.applikeysolutions.cosmocalendar.view.CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:connectedDayIconPosition="top"
            app:currentDayIconRes="@drawable/selected"
            app:currentDaySelectedIconRes="@drawable/selected"
            app:currentDayTextColor="#f79256"
            app:firstDayOfTheWeek="sunday"
            app:orientation="horizontal"
            app:selectedDayBackgroundColor="#FFEACA"
            app:selectedDayBackgroundEndColor="#F79256"
            app:selectedDayBackgroundStartColor="#F79256"
            app:selectedDayTextColor="#FFFFFF"
            app:weekendDayTextColor="#ef4550" />

        <LinearLayout
            android:background="#E53E51"
            android:layout_below="@+id/calendar_view"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/button_cal_ok"
                android:text="확인"
                android:textColor="#ddffffff"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
            <Button
                android:id="@+id/button_cal_cancel"
                android:text="취소"
                android:textColor="#ddffffff"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_ok"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="작성 완료" />
    </RelativeLayout>

</RelativeLayout>